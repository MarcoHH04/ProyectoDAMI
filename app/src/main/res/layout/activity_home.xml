<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:padding="16dp"
    tools:context=".ui.home.HomeActivity">

    <!-- Texto de bienvenida -->
    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E64A19"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Animación Lottie (igual que en login) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/food_home"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/login"
        android:contentDescription="Animación de comida" />

    <!-- Botones de navegación -->
    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/food_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Menú"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/btnCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrito de Pedido"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/btnReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservas"
            android:backgroundTint="#FF7043"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginVertical="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
